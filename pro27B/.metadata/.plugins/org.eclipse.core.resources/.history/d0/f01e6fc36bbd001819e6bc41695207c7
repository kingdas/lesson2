package com.yc.thread;

public class Sell implements Runnable {
	private int ticket = 20;

	@Override
	public void run() {

		while (ticket > 0) {
			sell();
			try {
				Thread.sleep(800);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}

	}

	private void sell() {
		if (ticket > 0) {
			System.out.println(Thread.currentThread().getName() + "ÊÛ³ö£º"
					+ ticket--);
		}
	}

}
